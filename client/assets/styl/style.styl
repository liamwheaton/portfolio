@import 'variables.styl'

*
	box-sizing border-box
	text-decoration none
	color port-lb
	background port-white
body 
	font-family body-font
	margin 0
	@media (min-width 1000px)
		display flex
p, li
	line-height 1.5
	font-weight 700
a
	outline none
	
// Header

header
	width 300px
	margin 0 auto
	@media (min-width 600px)
		width 500px
	@media (min-width 1000px)
		margin 1em 0 0 4em
	h1
		font-size 1.9em	
		line-height 1.3
		@media (min-width 600px)
			font-size 3em
	hr
		width 8em
		height 5px
		background port-lb
		border none
		margin-left 0
	nav
		display flex
		flex-direction column
		a
			font-weight 700
			height 45px
			padding-top 15px
		.active
			color port-db
			&::after
				content "\25c4"
				padding-left 0.3em
			    

// Views

.ng-enter
	animation slideInUp 0.2s
	z-index 9999
.view
	section
		width 300px
		margin 0 auto 10px auto
		display flex
		flex-direction column
		@media (min-width 600px)
			width 500px
		@media (min-width 1000px)
			&:first-of-type
				margin-top 20em
		a
			font-weight 700
			font-size 1.3em
			height 45px
			padding-top 15px
		.link
			width 120px
			height 45px
			padding-top 6px
			border 5px solid port-lb
			color port-lb
			text-align center
	.tease
		width 100%
	.picture
		display flex
		flex-wrap wrap
		@media (min-width 600px)
			width 300px
		@media (min-width 1000px)
			width 600px
		figure
			margin 0 10px 5px 0
	// 		a
	// 			img
.pswp__button--share
	display none

.btt
	z-index 999999
	position fixed
	right 10px
	bottom 10px
	background-color transparent
	&::after
		content "\25b2"
		font-size 1.2em
		
	